@model IEnumerable<QuizApp.Models.Lecturer>

@{
    ViewBag.Title = "List of Lecturers";
}

<div class="row row-offcanvas row-offcanvas-right">
    <div class="col-xs-12">
        <div class="jumbotron text-center">
            <h1>Lecturer Page</h1>
        </div>
    </div>
    <div class="col-xs-12">
        @Html.Partial("_Menu")
        <div class="col-sm-10">
            <table class="table">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        Units
                    </th>

                    <th>
                        Options
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LecturerNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            @foreach (var unit in item.Units)
                            {
                                @Html.DisplayFor(modelItem => unit.Name)
                            }
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btnEdit" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btnView" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btnDel" })
                        </td>
                    </tr>
                }

            </table>
            <p>
                @Html.ActionLink(" Add Lecturer ", "Create", null, new { @class = "btn btn-primary btn-sm;glyphicon glyphicon-plus" })
            </p>

        </div><!--/row-->
    </div><!--/.col-xs-12.col-sm-9-->

</div>